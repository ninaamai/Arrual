<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Авторизация</title>
    <link rel="shortcut icon" href="~/img/icon.png" type="image/x-icon">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/scss/style.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Arrual.styles.css" asp-append-version="true" />
    <link href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
</head>

<body class="body-wrapper">
    <header class="header-registration">
        <img class="" src="~/img/logo.png" width="395" height="62" />
    </header>
    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
    <link href="~/lib/select2/css/select2.css" rel="stylesheet" asp-append-version="true">

    <script src="~/lib/select2/js/select2.min.js" asp-append-version="true"></script>
    <script src="~/lib/select2/js/i18n/ru.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $('.main-select').select2({
                width: '100%',
                placeholder: 'Не выбрано'
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
